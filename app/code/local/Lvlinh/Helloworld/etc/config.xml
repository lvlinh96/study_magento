<?xml version="1.0"?>
<config>
	<modules>
		<Lvlinh_Helloworld>
			<version>0.1.0</version>
		</Lvlinh_Helloworld>
	</modules>
	<frontend>
		<routers>
			<helloworld>
				<use>standard</use>
				<args>
					<module>Lvlinh_Helloworld</module>
					<frontName>helloworld</frontName>
				</args>
			</helloworld>
		</routers>
		<layout>
			<updates>
				<helloworld>
					<file>helloworld.xml</file>
				</helloworld>
			</updates>
		</layout>
	</frontend>
	<global>
		<blocks>
			<helloworld>
				<class>Lvlinh_Helloworld_Block</class>
			</helloworld>
		</blocks>
		<helper>
			<lvlinh_helloworld>
				<class>Lvlinh_Helloworld_Helper</class>
			</lvlinh_helloworld>
		</helper>
	</global>
</config>